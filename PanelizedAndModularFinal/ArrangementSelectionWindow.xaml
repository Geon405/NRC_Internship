<Window x:Class="PanelizedAndModularFinal.ArrangementSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Arrangement"
        Width="400" Height="600"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Legend -->
            <RowDefinition Height="Auto"/>
            <!-- Module count -->
            <RowDefinition Height="*"/>
            <!-- List -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- 1) Bold header -->
        <TextBlock Grid.Row="0"
               Text="Please select one arrangement:"
               FontWeight="Bold"
               FontSize="14"
               Margin="0,0,0,4"/>

        <!-- 2) Legend -->
        <TextBlock Grid.Row="1"
               Text="Legend: 0 = Normal (length→horiz), 1 = Rotated (width→horiz)"
               FontStyle="Italic"
               FontSize="12"
               Margin="0,0,0,4"/>

        <!-- 3) Total modules -->
        <TextBlock Grid.Row="2"
               x:Name="tbModuleCount"
               Text="Total modules: 0"
               FontSize="12"
               Margin="0,0,0,8"/>

        <!-- 4) Scrollable list of bit-strings -->
        <ListBox x:Name="lbArrangements"
             Grid.Row="3"
             DisplayMemberPath="DisplayText"
             SelectedIndex="0"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             BorderThickness="1"
             Padding="4"/>

        <!-- 5) OK / Cancel -->
        <StackPanel Grid.Row="4"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button x:Name="btnOK"
              Width="75"
              Margin="0,0,10,0"
              Click="btnOK_Click"
              IsDefault="True">
                OK
            </Button>
            <Button Width="75"
              Click="btnCancel_Click"
              IsCancel="True">
                Cancel
            </Button>
        </StackPanel>
    </Grid>
</Window>
